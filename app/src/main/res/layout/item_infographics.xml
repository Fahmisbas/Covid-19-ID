<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="infographics"
            type="com.fahmisbas.covid19id.data.Infographics" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/googlesansbold"
            android:text="@{infographics.title}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_15ssp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/davy_grey"
            android:columnCount="2"
            android:rowCount="2">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_5sdp"
                android:imageUrl="@{infographics.picOne}" />


            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/_5sdp"
                android:imageUrl="@{infographics.picTwo}" />

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"

                android:layout_margin="@dimen/_5sdp"
                android:imageUrl="@{infographics.picThree}" />


            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_150sdp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="@dimen/_5sdp"
                android:imageUrl="@{infographics.picFour}" />

        </GridLayout>
    </LinearLayout>
</layout>
